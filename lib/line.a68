
PROC line = (POS from, to) SCHEME: (
  SCHEME scheme;

  REAL
    dx = x OF to - x OF from,
    dy = y OF to - y OF from,
    len = (ABS dx >= ABS dy | ABS dx | ABS dy);

  REAL
    delta x = dx / len,
    delta y = dy / len;
  REAL
    x := x OF from,
    y := y OF from;

  scheme +:= PIXEL ("", ROUND x, ROUND y);

  TO ENTIER len DO
    x +:= delta x;
    y +:= delta y;

    scheme +:= PIXEL ("", ROUND x, ROUND y)
  OD;

  scheme
)
